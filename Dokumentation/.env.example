# Supabase Configuration
# Get these values from 'supabase start' output for local development
# or from Supabase Dashboard for production
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Email Service (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png

# Feature Flags
ENABLE_MFA=false
ENABLE_EMAIL_VERIFICATION=true
ENABLE_AUDIT_LOG=true

# Rate Limiting
API_RATE_LIMIT=100  # requests per minute
PDF_GENERATION_LIMIT=10  # per hour

# Monitoring (optional)
SENTRY_DSN=
VERCEL_ANALYTICS_ID=

# Security
JWT_SECRET=your-jwt-secret-here  # Only for custom auth
ENCRYPTION_KEY=your-encryption-key-here  # For sensitive data

# Third Party Services (optional)
GOOGLE_ANALYTICS_ID=
INTERCOM_APP_ID=

# Development Tools
ENABLE_DEBUG_MODE=true
LOG_LEVEL=debug  # debug | info | warn | error

# Backup & Recovery
BACKUP_ENABLED=false
BACKUP_S3_BUCKET=
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM