# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# App Configuration
PORT=3001

# Multi-Tenancy Configuration (for development)
NEXT_PUBLIC_DEFAULT_TENANT_SLUG=default

# Security Configuration
UPSTASH_REDIS_REST_URL=your_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
BLOCKED_IPS=192.168.1.100,10.0.0.5
WEBHOOK_SECRET=your_webhook_secret_here

# Rate Limiting (optional overrides)
RATE_LIMIT_AUTH_REQUESTS=5
RATE_LIMIT_AUTH_WINDOW=15m
RATE_LIMIT_API_REQUESTS=100
RATE_LIMIT_API_WINDOW=1m

# File Upload Limits
MAX_FILE_SIZE_DOCUMENTS=25MB
MAX_FILE_SIZE_IMAGES=5MB
MAX_DAILY_UPLOADS=50
MAX_MONTHLY_UPLOADS=1000

# Security Headers
CSP_REPORT_URI=https://yourdomain.com/api/csp-report
HSTS_MAX_AGE=31536000

# API Security
API_SECRET_KEY=your_api_secret_key_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Session Security
SESSION_TIMEOUT=3600
CSRF_SECRET=your_csrf_secret_here

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info